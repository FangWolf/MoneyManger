<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#3688ff"
        android:text="赚钱啦^_^"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入金额："
            android:textSize="20sp"
            android:textColor="#f4ea2a"/>
        <EditText
            android:id="@+id/txtMoney"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="多了多少啊~"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入日期："
            android:textSize="20sp"
            android:textColor="#f4ea2a"/>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="点击后边的按钮选择日期"/>

        <ImageButton
            android:id="@+id/dateChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calendar"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收入类别:"
            android:textSize="20sp"
            android:textColor="#f4ea2a"
            android:layout_weight="0.06"/>

        <Spinner
            android:id="@+id/txtSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.58"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="备注信息："
        android:textSize="20sp"
        android:textColor="#f4ea2a"/>

    <EditText
        android:id="@+id/txtFlag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="说点什么..."
        android:maxLines="10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:src="@drawable/send"
            android:text="提交"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/btnRewrite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="重写"
            android:src="@drawable/rewrite"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重写"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="15sp"/>
    </LinearLayout>

</LinearLayout>
